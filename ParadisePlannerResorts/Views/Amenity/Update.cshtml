@model ParadisePlannerResorts.Models.ViewModel.AmenityVm

<div class="w-100 card border-0 p-2">
    <div class="card-header bg-success bg-gradient mg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Amenity</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-2">
        <form asp-action="Update" method="post" class="row">

            <!-- Hidden ID to identify record -->
            <input asp-for="Amenity.Id" type="hidden" />

            <!-- Resort Dropdown -->
            <div class="form-floating py-2 col-12">
                <select asp-for="Amenity.ResortId" asp-items="@Model.list" class="form-select border shadow">
                    <option disabled selected>-- Select Resort --</option>
                </select>
                <label asp-for="Amenity.ResortId" class="ms-2"></label>
                <span asp-validation-for="Amenity.ResortId" class="text-danger"></span>
            </div>

            <!-- Resort Number (Readonly/Disabled) -->
            <div class="form-floating py-2 col-12">
                <input asp-for="Amenity.Name" class="form-control border shadow" readonly />
                <label asp-for="Amenity.Name" class="ms-2"></label>
                <span asp-validation-for="Amenity.Name" class="text-danger"></span>
            </div>

            <!-- Special Detail -->
            <div class="form-floating py-2 col-12">
                <input asp-for="Amenity.Description" class="form-control border shadow" />
                <label asp-for="Amenity.Description" class="ms-2"></label>
                <span asp-validation-for="Amenity.Description" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="row pt-2 justify-content-center">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Update
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

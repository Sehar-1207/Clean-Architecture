@model ParadisePlanner.Domain.Entities.Resort

<div class="row">
    <div class="col-12 col-md-5">
        <img src="@Model.ImageUrl" style="border-radius:10px;" width="100%" alt="Resort image" />
    </div>

    <div class="col-12 col-md-7">
        <div class="row p-2">
            <div class="col-12">
                <p class="card-title text-success" style="font-size:xx-large">@Model.Name</p>
                <p class="card-text" style="font-size:large">
                    @Html.Raw(Model.Description)
                </p>

                @if (Model.amenities != null && Model.amenities.Any())
                {
                    <p class="h5 text-primary">Resort Amenities</p>
                    <ul>
                        @foreach (var amenity in Model.amenities)
                        {
                            <li>
                                <strong>@amenity.Name</strong><br />
                                @if (!string.IsNullOrWhiteSpace(amenity.Description))
                                {
                                    <span class="text-muted">@amenity.Description</span>
                                }
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        <div class="row col-12">
            <span class="text-end p-0 pt-3 m-0">
                <span class="float-right">Max Occupancy: @Model.Occupancy adults</span><br />
                <span class="float-right pt-1">Resort Size: @Model.Sqft sqft</span><br />
                <p class="text-warning font-weight-bold pt-1">
                    USD
                    <span style="border-bottom:1px solid #ff6a00">
                        @Model.Price.ToString("c") / night
                    </span>
                </p>
            </span>
        </div>
    </div>
</div>
